{
    "image": "mcr.microsoft.com/devcontainers/universal:2",
    "features": {
        "ssh": {
            "install": true,
            "servicePassword": "password"
        },
        "ghcr.io/devcontainers/features/java:1": {}
    },
    "settings": {
        "files.associations": {
            "*.md": "markdown"
        },
        "markdown-preview-enhanced.automaticallyShowPreviewOfMarkdownFile": true
    },
    "forwardPorts": [
        6080,
        6000
    ],
    "postCreateCommand": "/workspace/.devcontainer/setup.sh",
    "postStartCommand": "alias open-browser='xdg-open http://localhost:6080/'",
    "remoteEnv": {
        "GIT_USER": "ahaas207",
        "GIT_REPO": "DemoStructuredCOS160",
        "DISPLAY": "localhost:0",
        "LD_LIBRARY_PATH": "$LD_LIBRARY_PATH:/workspaces/.codespaces/shared/editors/jetbrains/*/plugins/remote-dev-server/selfcontained/lib"
    },
    "mounts": [
        "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind"
    ],
    "runArgs": [
        "-v",
        "/run/host-services/ssh-auth.sock:/run/host-services/ssh-auth.sock"
    ],
    "customizations": {
        "bashrc": [
            "export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:/workspaces/.codespaces/shared/editors/jetbrains/*/plugins/remote-dev-server/selfcontained/lib",
            "alias open-browser='xdg-open http://localhost:6080/'",
            "export DISPLAY=:0"
        ],
        "vscode": {
            "extensions": [
                "MS-vsliveshare.vsliveshare",
                "CS50.ddb50",
                "CS50.markdown50",
                "vscjava.vscode-java-pack",
                "vscjava.vscode-java-debug",
                "eamodio.gitlens",
                "ms-vscode.remote-containers",
                "shd101wyy.markdown-preview-enhanced"
            ]
        }
    }
}





